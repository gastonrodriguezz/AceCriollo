---
const { text, icon, href } = Astro.props;
import { Image } from "astro:assets";
---

<div class="flex items-center my-2 px-4 py-2 btn-hoover hover:bg-greeno/10 hover:cursor-pointer rounded-full">
    <div>
        <Image src={icon} alt="{icon}-Logo" class="invert" />
    </div>
    <a href={href} class="font-bold text-lg ml-2">{text}</a>
</div>
