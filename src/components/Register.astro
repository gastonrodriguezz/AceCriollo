---
const title = "Registro";
---

<div
  class="flex-1 flex flex-col gap-4 items-center p-4 justify-center text-white"
>
  <section class="w-full max-w-md">
    <h2 class="font-semibold text-2xl w-full mb-1">
      {title}
    </h2>

    <form
      action="/api/auth/register"
      method="post"
      class="grid grid-cols-1 gap-3 w-full"
    >
      <div class="grid grid-cols-1 gap-2">
        <label for="email" class="font-medium text-sm">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          class="rounded-md py-1 px-3 border focus:outline-none focus:ring-2 focus:bg-white focus:ring-opacity-60"
        />
      </div>
      <div class="grid grid-cols-1 gap-2">
        <label for="password" class="font-medium text-sm">ContraseÃ±a</label>
        <input
          id="password"
          type="password"
          name="password"
          class="rounded-md py-1 px-3 focus:outline-none focus:ring-2 focus:bg-white focus:ring-opacity-60"
        />
      </div>
      <button
        type="submit"
        class="py-1.5 border rounded-md mt-4 font-medium text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
        >Registrarse</button
      >
    </form>
  </section>
</div>
